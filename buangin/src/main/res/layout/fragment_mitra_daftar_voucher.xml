<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/warnaPutih"
    android:orientation="vertical"
    tools:context=".View.Mitra.TabDaftarVoucherFragment">

    <RelativeLayout
        android:id="@+id/appbar_voucher"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:background="@color/warnaPutih">

        <ImageView
            android:id="@+id/foto_profil_mitra"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginRight="8dp"
            android:background="@drawable/style_lingkaran"
            android:scaleType="centerCrop"
            android:src="@drawable/pp_mitra" />

        <TextView
            android:id="@+id/nama_mitra"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/foto_profil_mitra"
            android:text="Heru Santuso"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/nama_umkm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/nama_mitra"
            android:layout_toRightOf="@id/foto_profil_mitra"
            android:text="Mitra UMKM Seblak Abah"
            android:textSize="15sp"
            android:textStyle="italic|bold" />

    </RelativeLayout>

    <android.support.design.widget.TabLayout
        android:id="@+id/tab_voucher"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/warnaPutih"
        app:tabGravity="fill"
        app:tabMode="fixed"
        app:tabSelectedTextColor="@color/warnaUtama"
        app:tabTextColor="@color/warnaGray" />

    <android.support.v4.view.ViewPager
        android:id="@+id/pager_voucher"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </android.support.v4.view.ViewPager>

</LinearLayout>